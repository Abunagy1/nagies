extends layout
block content
  h1 Delete Genre: #{genre.name}
  if genre_posts.length
    p #[strong Delete the following posts before attempting to delete this genre.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Posts
      dl
      each post in genre_posts
        dt 
          a(href=post.url) #{post.title}
        dd #{post.summary}
  else
    p Do you really want to delete this Genre?
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=genre._id )
      button.btn.btn-primary(type='submit') Delete